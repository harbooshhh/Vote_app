
pipeline {
    agent none 
	


    stages 
        { 


	stage('Build') {

		when {
		changeset "**/vote/**"
		}
		
		 agent {
                docker {
                image 'python:2.7.18-slim'

                        }
                }


            steps {
                echo 'Compiling vote app.'
		dir('vote') {
		sh 'pip  install -r requirements.txt'
		}
	
	}
            }
        
        
        
         stage('Test') {

		agent {
        	docker {
            	image 'python:2.7.18-slim'
        
        		}
        	}
		when {
		changeset "**/vote/**"
			}
            steps {
                echo 'Test vote is complete'
		dir('vote') {
                sh 'nosetests -v'
		}
            }
        }


	stage('Docker-package')
	{
	 agent any
	when {
		changeset '**/vote/**'
		branch 'master'
		}
	steps { 
		script {
		
			docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {

        		def customImage = docker.build("harbooshhh/vote:v${env.BUILD_ID}","./worker")

        		/* Push the container to the custom Registry */
        		customImage.push()

        		customImage.push("${env.BRANCH}")

			}
		}	


		}
	}
}
        
    post {
        
        always {
            
            echo 'the job worker is finished.'
        }
    }


}
