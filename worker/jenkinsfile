
pipeline {
    agent any
    tools {
        maven 'Maven 3.8.1' 
    }

    stages {
        stage('Build') {
            steps {
                echo 'Compiling worker app.'
		dir('worker') {
		sh 'mvn compile'
	
	}
            }
        }
        
        
         stage('Test') {
            steps {
                echo 'Test worker is complete'
		dir('worker') {
                sh 'mvn clean test'
		}
            }
        }
        
         stage('Package') {
            steps {
                echo 'Package worker is done'
		dir('worker') {
                sh 'mvn package -DskipTests'
	}
            }
        }
    }
    
    post{
        
        always {
           archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            junit 'build/reports/**/*.xml'
            echo 'the job worker is finished.'
        }
    }
}

